<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="VDI.User"
	x:Name="Page"
	WindowTitle="Page"
	FlowDirection="LeftToRight"
	Width="500" Height="300"
	WindowWidth="640" WindowHeight="480">

	<Grid x:Name="LayoutRoot">
		<Grid Margin="0,8,8,8">
			<Grid.Background>
				<ImageBrush ImageSource="cloud2_bg.jpg"/>
			</Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto" MinHeight="40"/>
				<RowDefinition Height="auto" MinHeight="40"/>
				<RowDefinition Height="auto" MinHeight="50"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<Label Content="云晫科技" HorizontalAlignment="Center" Margin="25,8,0,8" Width="177" FontSize="21.333" Background="#00F3EFEF" Foreground="White"/>

            <Label Content="用户名" Grid.Row="1" Grid.Column="0" Width="58" FontSize="14.667" FontWeight="Bold" HorizontalAlignment="Right"/>
			<TextBox  TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="122.487" Opacity="0.8" />

			<Label Content="密 码" Grid.Row="2" Grid.Column="0" Width="58" FontSize="14.667" FontWeight="Bold" HorizontalAlignment="Right" Height="30"/>
			<PasswordBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="122.487" Opacity="0.8" />

			
			<Label Content="活动目录域" Grid.Row="3" Grid.Column="0" Width="58" FontSize="14.667" FontWeight="Bold" HorizontalAlignment="Right" Height="30"/>
			<ComboBox Grid.Row="3" Grid.Column="1" Width="101" Height="26.157" HorizontalAlignment="Left"/>
	
		</Grid>
	</Grid>
</Page>